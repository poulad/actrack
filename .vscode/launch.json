{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Watch Run",
            "type": "coreclr",
            "request": "launch",
            "args": ["watch", "run"],
            "program": "${workspaceFolder}/bin/Debug/netstandard2.0/Actrack.dll",
            "preLaunchTask": "build",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/netstandard2.0/Actrack.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}